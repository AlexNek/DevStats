<Window x:Class="DevStats.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="420" WindowStartupLocation="CenterOwner">

  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel>
      <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" HorizontalAlignment="Center"/>

      <CheckBox Content="Exclude Autogenerated Files"
                IsChecked="{Binding ExcludeAutogeneratedFiles}" Margin="0,0,0,8"/>

      <CheckBox Content="Use .gitignore"
                IsChecked="{Binding UseGitIgnore}" Margin="0,0,0,8"/>

      <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
        <TextBlock Text="Autogenerated File Scan Bytes:" VerticalAlignment="Center" Width="200"/>
        <TextBox Text="{Binding AutogeneratedFileScanBytes}" Width="80"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
        <TextBlock Text="Histogram Max Bins:" VerticalAlignment="Center" Width="200"/>
        <TextBox Text="{Binding HistogramMaxBins}" Width="80"/>
      </StackPanel>

      <TextBlock Text="Autogenerated File Patterns (one per line):" Margin="0,8,0,4"/>
      <TextBox Text="{Binding AutogeneratedFilePatternsText}" AcceptsReturn="True" Height="265" VerticalScrollBarVisibility="Auto"/>
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
      <Button Content="Save" Width="80" Margin="0,0,8,0" Command="{Binding CommandSave}" />
      <Button Content="Cancel" Width="80" Command="{Binding CommandCancel}" />
    </StackPanel>
  </Grid>
</Window>