<Window x:Class="DevStats.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About DevStats"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
  <StackPanel Margin="24">
    <TextBlock Text="DevStats" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
    <TextBlock Text="C# Project Statistics Tool" FontSize="14" Margin="0,0,0,8"/>
    <TextBlock Text="{Binding Version}" Margin="0,0,0,8"/>
    <TextBlock Text="© 2025 by Alex Nek" Margin="0,0,0,16"/>
    <Button Content="OK" Width="80" HorizontalAlignment="Right" IsDefault="True" Click="Ok_Click"/>
  </StackPanel>
</Window>